{
    "version": "2.0.0", //Microsoft, Why cant i change this?
    "tasks": [
        {
            "type": "cppbuild",
            "label": "GCC Build C/C++ Code in Debug Mode", //TODO: Release Mode with O2 Optimize Task
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "detail": "Task generated by Debugger. But i changed it a bit"
        },
        {
            "type": "shell",
            "label": "Clean Build Folder",
            "command": "rm",
            "args": [
                "-rf", //No Error if the Build folder is empty.
                "*"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "detail": "No detail, just like make clean",
            "group": "none",
            "presentation": {
                //Prevent focus on a new terminal tab.
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": {
                "pattern" :[
                    {
                        //Sure, I'm familiar with regular expressions.
                        //https://code.visualstudio.com/docs/editor/tasks#_defining-a-problem-matcher
                        "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        }
    ]
}